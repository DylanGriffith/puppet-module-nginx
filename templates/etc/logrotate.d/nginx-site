#                ANY LOCAL CHANGES WILL BE OVERWRITTEN

<%= @nginx_site_base_dir %>/logs/*.log {
        daily
        missingok
        rotate 90
        compress
        delaycompress
        notifempty
        create 640 <%= @nginx_site_user %> root
        sharedscripts
        postrotate
        	[ ! -f /var/run/nginx.pid ] || kill -USR1 `cat /var/run/nginx.pid`
	endscript
}
